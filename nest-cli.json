{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true,
    "typeCheck": true,
    "assets": [
      {
        "include": "config/*.yml",
        "outDir": "./dist",
        "watchAssets": true
      },
      {
        "include": "assets/",
        "outDir": "./dist",
        "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}
